<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8a424340"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/cly_total"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/backgroudtota" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="Total"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/money_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="T_Money"
            android:textColor="#119ffd"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cly_total"
            android:layout_marginLeft="20dp"
            android:text="Ticket"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_number_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_below="@+id/cly_total"
            android:text="N_Ticket"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_sumtotal_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cly_total"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/txt_number_ticket"
            android:layout_toRightOf="@+id/txt_number_ticket"
            android:text="s_total"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_total_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_sumtotal_ticket"
            android:layout_alignBottom="@+id/txt_sumtotal_ticket"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="total"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txt_name_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_number_company"
            android:layout_alignBottom="@+id/txt_number_company"
            android:layout_alignEnd="@+id/txt_total_ticket"
            android:layout_alignRight="@+id/txt_total_ticket"
            android:text="Number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_number_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Number Company  :"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:background="#ffffff">

            <TextView
                android:id="@+id/txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/busName"
                android:layout_width="wrap_content"
                android:text="ABC"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDestination"
                android:layout_below="@id/txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/busDes"
                android:layout_width="wrap_content"
                android:layout_below="@id/txtCompanyName"
                android:text="Phnom penh to Kompong Cham"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTime"
                android:layout_below="@id/txtDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/timeTicket"
                android:layout_width="wrap_content"
                android:text="12 Nov 2019, 12:56PM"
                android:layout_below="@id/txtDestination"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtBusID"
                android:layout_below="@id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BusID"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/BusID"
                android:layout_below="@id/txtTime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="100023241"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_below="@id/txtBusID"
                android:layout_centerHorizontal="true"
                android:layout_width="45dp"
                android:layout_marginTop="50dp"
                android:layout_height="45dp"

                android:src="@drawable/delete_icon2"/>

        </RelativeLayout>

</LinearLayout>